---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CourseCard from '../components/CourseCard.astro';
import Footer from '../components/Footer.astro';
import { courses } from '../lib/supabase';
---

<Layout title="Courses - LbisTech" description="Explore our comprehensive technology courses designed to advance your career">
  <Header />
  
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-primary-900 to-primary-800 text-white py-16">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Courses</h1>
        <p class="text-xl text-gray-200 max-w-2xl mx-auto">
          Master the most in-demand technologies with our comprehensive certification programs designed by industry experts.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Course Categories -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Choose Your Career Path</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Whether you're starting your tech journey or looking to advance your career, we have the perfect course for you.
        </p>
      </div>
      
      <!-- Course Filter -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="filter-btn active bg-coral-500 text-white px-6 py-2 rounded-lg font-semibold" data-filter="all">
          All Courses
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 hover:bg-gray-300 px-6 py-2 rounded-lg font-semibold" data-filter="cloud">
          Cloud Computing
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 hover:bg-gray-300 px-6 py-2 rounded-lg font-semibold" data-filter="devops">
          DevOps
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 hover:bg-gray-300 px-6 py-2 rounded-lg font-semibold" data-filter="security">
          Cybersecurity
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 hover:bg-gray-300 px-6 py-2 rounded-lg font-semibold" data-filter="free">
          Free Courses
        </button>
      </div>
      
      <!-- Courses Grid -->
      <div id="courses-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {courses.map(course => (
          <div class="course-card" 
               data-category={
                 course.id.includes('aws') || course.id.includes('azure') ? 'cloud' : 
                 course.id.includes('devops') || course.id.includes('docker') || course.id.includes('kubernetes') ? 'devops' : 
                 course.id.includes('cybersecurity') || course.id.includes('security') ? 'security' : 
                 'other'
               } 
               data-free={course.is_free}>
            <CourseCard course={course} />
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Learning Paths -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Recommended Learning Paths</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Follow our structured learning paths to maximize your career growth and certification success.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Cloud Engineer Path -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Cloud Engineer</h3>
            <p class="text-gray-600 text-sm">Master cloud platforms and become a certified cloud professional</p>
          </div>
          <div class="space-y-3">
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">1. Azure Fundamentals</span>
              <span class="text-xs text-gray-500">6-8 weeks</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">2. AWS 3 in 1</span>
              <span class="text-xs text-gray-500">12-16 weeks</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">3. DevOps Integration</span>
              <span class="text-xs text-gray-500">8-10 weeks</span>
            </div>
          </div>
          <div class="mt-6 text-center">
            <span class="text-2xl font-bold text-coral-500">$1000</span>
            <span class="text-gray-500 text-sm block">Complete Path</span>
          </div>
        </div>
        
        <!-- DevOps Engineer Path -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">DevOps Engineer</h3>
            <p class="text-gray-600 text-sm">Build expertise in automation, CI/CD, and infrastructure</p>
          </div>
          <div class="space-y-3">
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">1. Docker Containerization</span>
              <span class="text-xs text-gray-500">6-8 weeks</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">2. Kubernetes Mastery</span>
              <span class="text-xs text-gray-500">8-10 weeks</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">3. DevOps Zero to Hero</span>
              <span class="text-xs text-gray-500">16-20 weeks</span>
            </div>
          </div>
          <div class="mt-6 text-center">
            <span class="text-2xl font-bold text-coral-500">$850</span>
            <span class="text-gray-500 text-sm block">Complete Path</span>
          </div>
        </div>
        
        <!-- Security Specialist Path -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-red-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Security Specialist</h3>
            <p class="text-gray-600 text-sm">Become an expert in cybersecurity and ethical hacking</p>
          </div>
          <div class="space-y-3">
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">1. Cybersecurity Zero to Hero</span>
              <span class="text-xs text-gray-500">14-18 weeks</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">2. Cloud Security</span>
              <span class="text-xs text-gray-500">8-10 weeks</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium">3. Advanced Penetration Testing</span>
              <span class="text-xs text-gray-500">10-12 weeks</span>
            </div>
          </div>
          <div class="mt-6 text-center">
            <span class="text-2xl font-bold text-coral-500">$900</span>
            <span class="text-gray-500 text-sm block">Complete Path</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Why Choose Our Courses -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose LbisTech Courses?</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Our courses are designed with your success in mind, featuring industry-relevant content and hands-on experience.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-coral-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Industry-Recognized</h3>
          <p class="text-gray-600 text-sm">Certifications valued by top employers worldwide</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-coral-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Hands-On Labs</h3>
          <p class="text-gray-600 text-sm">Real-world projects and practical experience</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-coral-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Expert Support</h3>
          <p class="text-gray-600 text-sm">Direct access to industry professionals</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-coral-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Flexible Learning</h3>
          <p class="text-gray-600 text-sm">Study at your own pace with lifetime access</p>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>

<script>
  // Course filtering
  const filterButtons = document.querySelectorAll('.filter-btn');
  const courseCards = document.querySelectorAll('.course-card');
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons
      filterButtons.forEach(btn => {
        btn.classList.remove('active', 'bg-coral-500', 'text-white');
        btn.classList.add('bg-gray-200', 'text-gray-700');
      });
      
      // Add active class to clicked button
      button.classList.add('active', 'bg-coral-500', 'text-white');
      button.classList.remove('bg-gray-200', 'text-gray-700');
      
      const filter = button.dataset.filter;
      
      courseCards.forEach(card => {
        if (filter === 'all') {
          card.style.display = 'block';
        } else if (filter === 'free') {
          card.style.display = card.dataset.free === 'true' ? 'block' : 'none';
        } else {
          card.style.display = card.dataset.category === filter ? 'block' : 'none';
        }
      });
    });
  });
</script>