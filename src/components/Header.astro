---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-gradient-to-br from-primary-900 to-primary-700 rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-lg">L</span>
        </div>
        <span class="text-2xl font-bold text-primary-900">LbisTech</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class={`hover:text-coral-500 transition-colors ${currentPath === '/' ? 'text-coral-500 font-semibold' : 'text-gray-700'}`}>
          Home
        </a>
        <a href="/courses" class={`hover:text-coral-500 transition-colors ${currentPath === '/courses' ? 'text-coral-500 font-semibold' : 'text-gray-700'}`}>
          Courses
        </a>
        <a href="/trainers" class={`hover:text-coral-500 transition-colors ${currentPath === '/trainers' ? 'text-coral-500 font-semibold' : 'text-gray-700'}`}>
          Trainers
        </a>
        <a href="/about" class={`hover:text-coral-500 transition-colors ${currentPath === '/about' ? 'text-coral-500 font-semibold' : 'text-gray-700'}`}>
          About
        </a>
        <a href="/contact" class={`hover:text-coral-500 transition-colors ${currentPath === '/contact' ? 'text-coral-500 font-semibold' : 'text-gray-700'}`}>
          Contact
        </a>
        <a href="/contact" class="bg-coral-500 hover:bg-coral-600 text-white px-6 py-2 rounded-lg transition-colors">
          Get Started
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-coral-500">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t">
      <div class="flex flex-col space-y-3 pt-4">
        <a href="/" class="text-gray-700 hover:text-coral-500 py-2">Home</a>
        <a href="/courses" class="text-gray-700 hover:text-coral-500 py-2">Courses</a>
        <a href="/trainers" class="text-gray-700 hover:text-coral-500 py-2">Trainers</a>
        <a href="/about" class="text-gray-700 hover:text-coral-500 py-2">About</a>
        <a href="/contact" class="text-gray-700 hover:text-coral-500 py-2">Contact</a>
        <a href="/contact" class="bg-coral-500 hover:bg-coral-600 text-white px-4 py-2 rounded-lg text-center">
          Get Started
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>