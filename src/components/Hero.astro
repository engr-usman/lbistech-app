<section class="relative bg-gradient-to-r from-primary-900 to-primary-800 text-white overflow-hidden">
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="absolute inset-0 bg-[url('https://images.pexels.com/photos/3184302/pexels-photo-3184302.jpeg?auto=compress&cs=tinysrgb&w=1920')] bg-cover bg-center opacity-20"></div>
  
  <div class="relative container mx-auto px-4 py-20 lg:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
        Master the Future with
        <span class="text-coral-500">LbisTech</span>
      </h1>
      
      <p class="text-xl md:text-2xl mb-8 text-gray-200 animate-slide-up">
        Professional technology education that transforms careers. 
        Join thousands of students who've accelerated their tech journey with us.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="/courses" class="bg-coral-500 hover:bg-coral-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 shadow-lg">
          Browse Courses
        </a>
        <a href="/contact" class="border-2 border-white text-white hover:bg-white hover:text-primary-900 px-8 py-4 rounded-lg text-lg font-semibold transition-all">
          Get Started Free
        </a>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-2xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-coral-500 mb-2">5000+</div>
          <div class="text-gray-300">Students Enrolled</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-coral-500 mb-2">95%</div>
          <div class="text-gray-300">Success Rate</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-coral-500 mb-2">24/7</div>
          <div class="text-gray-300">Support</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-gentle">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>